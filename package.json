{
  "name": "simplehttpmonitor",
  "version": "1.0.0",
  "description": "Get and consolidate system info over HTTP",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "frontend": "npx parcel index.html",
    "build": "npx tailwindcss -i input.css -o output.css && npx parcel build index.html",
    "backend": "node index.js",
    "dev": "concurrently --kill-others \"npm run backend\" \"npm run frontend\""
  },
